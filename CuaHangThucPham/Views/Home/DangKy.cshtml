@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc
@using CuaHangThucPham.Models
@model ThanhVien
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="register">
    <div class="container">
        <h2>Đăng ký</h2>
        <div class="login-form-grids">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div>
                    <span style="color: brown">Họ và tên:</span>
                    @Html.TextBoxFor(model => model.HoTen)
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color: brown">Tài khoản:</span>
                    @Html.TextBoxFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color: brown">Địa chỉ Email:</span>
                    @Html.TextBoxFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color: brown">Địa chỉ:</span>
                    @Html.TextBoxFor(model => model.DiaChi)
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color: brown">Số điện thoại:</span>
                    @Html.TextBoxFor(model => model.SoDienThoai)
                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color: brown">Mật khẩu:</span>
                    @Html.PasswordFor(model => model.MatKhau)
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span style="color: brown">Câu hỏi bí mật:</span> <br /><br />
                    @Html.DropDownList("CauHoi")
                </div>
                <div>
                    <span style="color: brown">Câu trả lời:</span>
                    @Html.TextBoxFor(model => model.CauTraLoi)
                    @Html.ValidationMessageFor(model => model.CauTraLoi, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.Captcha(5)
                </div>
                <div>
                    <input type="submit" value="Tạo tài khoản" id="register-submit">
                </div>
            }

            <h5 style="color:red">@ViewBag.ThongBao</h5>
            <style>
                span.text-danger {
                    color: red;
                }
            </style>
        </div>
        <div class="register-home">
            <a href="@Url.Action("Index","Home")">Trang chủ</a>
        </div>
    </div>
</div>

