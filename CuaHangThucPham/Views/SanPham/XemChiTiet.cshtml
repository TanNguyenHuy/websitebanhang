@using CuaHangThucPham.Models;
@model SanPham
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="products">
    <div class="container">
        <div class="agileinfo_single">

            <div class="col-md-4 agileinfo_single_left">
                <img id="example" src="@Url.Content("~/hinhanh/"+Model.HinhAnh)" alt=" " class="img-responsive">
            </div>
            <div class="col-md-8 agileinfo_single_right">
                <h2>@Model.TenSP</h2>
                <div class="w3agile_description">
                    <h4>Mô tả</h4>
                    <p>
                        @Html.Raw(Model.MoTa)
                    </p>
                </div>
                <div class="snipcart-item block">
                    <div class="snipcart-thumb agileinfo_single_right_snipcart">
                        <h4 class="m-sing">Giá: @Model.DonGia.Value.ToString("#,##") VNĐ</h4>
                    </div>
                    <div class="snipcart-details agileinfo_single_right_details">
                        <form action="@Url.Action("ThemGioHang","GioHang", new { @MaSP=Model.MaSP,@strURL=Request.Url.ToString()})" method="post">
                            <fieldset>
                                <input type="submit" name="submit" value="Thêm vào giỏ hàng" class="button">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

