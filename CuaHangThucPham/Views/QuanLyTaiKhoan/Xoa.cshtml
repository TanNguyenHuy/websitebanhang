@model CuaHangThucPham.Models.ThanhVien

@{
    ViewBag.Title = "Xoa";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Xoá thành viên</h2>

@using (Html.BeginForm("Xoa", "QuanLyTaiKhoan")) {
